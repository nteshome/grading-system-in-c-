    float sum1;


 sum1 = (P_Cs * Cs_Cr) + (P_En * Eng_Cr) + (P_Ci * Civ_Cr) + (P_Ec * Eco_Cr) + (P_Ma * Math_Cr) + (P_An * Ant_cr);

 GPA1 = sum1 / Full_Cr1;

