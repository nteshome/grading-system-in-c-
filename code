      string mark_to_grade(float chk){
            if (chk > 90)
                return "A+";
            else if (chk >= 80)
                return "A";
            else if (chk >= 80)
                return "A-";

            else if (chk >= 75)
                return "B+";
            else if (chk >= 70)
                return "B";
            else if (chk >= 65)
                return "B-";

            else if (chk >=55)
                return "C+";
            else if (chk >=45)
                return "C";
            else if (chk >=40)
                return "C-";


            else if (chk >= 38)
                return "D+";
            else if (chk >= 35)
                return "D";
            else if (chk >= 30)
                return "D-";
            else
                return "F";
    }

    float check_Point(string GpaOut){
            if (GpaOut == "A+")
                return 4;
            else if (GpaOut == "A")
                return 4;
            else if (GpaOut == "A-")
                return 3.67;
            else if (GpaOut == "B+")
                return 3.33;
            else if (GpaOut == "B")
                return 3;
            else if (GpaOut == "B-")
                return 2.67;
            else if (GpaOut == "C+")
                return 2.33;
            else if (GpaOut == "C")
                return 2;
            else if (GpaOut == "C-")
                return 1.67;
            else if (GpaOut == "D+")
                return 1.33;
            else if (GpaOut == "D")
                return 1;
            else if (GpaOut == "D-")
                return 0.67;
            else
                return 0;
    }
